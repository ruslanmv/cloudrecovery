# CloudRecovery Autopilot - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================================================
# CLOUDRECOVERY CONFIGURATION
# ============================================================================

# Agent authentication token
CLOUDRECOVERY_TOKEN=your-secret-token-here

# Control plane URL
CLOUDRECOVERY_CONTROL_PLANE_URL=https://your-cloudrecovery-server.example.com

# Environment name
CLOUDRECOVERY_ENV=production

# Configuration file path
CLOUDRECOVERY_AGENT_CONFIG=/etc/cloudrecovery/agent.yaml

# ============================================================================
# EMAIL NOTIFICATIONS
# ============================================================================

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Email settings
SMTP_FROM_EMAIL=cloudrecovery@example.com
SMTP_FROM_NAME=CloudRecovery Autopilot

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin1@example.com,admin2@example.com,oncall@example.com

# ============================================================================
# DATABASE MONITORING
# ============================================================================

# PostgreSQL connection string
POSTGRESQL_URL=postgresql://user:password@localhost:5432/database

# ============================================================================
# SERVICE MONITORING
# ============================================================================

# Website URLs to monitor (comma-separated)
MONITOR_URLS=https://your-website.example.com,https://your-api.example.com/health

# MCP server process name
MCP_PROCESS_NAME=mcp-server

# ============================================================================
# AUTOPILOT SETTINGS
# ============================================================================

# Enable autopilot recovery
AUTOPILOT_ENABLED=true

# Auto-approve safe operations
AUTO_APPROVE_SAFE=true

# Maximum safety level without approval (safe, low, medium, high, critical)
MAX_SAFETY_LEVEL=medium

# Monitoring dashboard base URL
DASHBOARD_BASE_URL=https://your-cloudrecovery-server.example.com

# ============================================================================
# LLM PROVIDER (for AI-assisted recovery)
# ============================================================================

# Provider: openai, anthropic, watsonx, ollama
CLOUDRECOVERY_PROVIDER=anthropic

# OpenAI settings
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (Claude) settings
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5
ANTHROPIC_BASE_URL=https://api.anthropic.com

# IBM WatsonX settings
WATSONX_API_KEY=your-watsonx-key-here
WATSONX_PROJECT_ID=your-project-id
WATSONX_MODEL=meta-llama/llama-3-70b-instruct
WATSONX_BASE_URL=https://us-south.ml.cloud.ibm.com

# Ollama settings (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/cloudrecovery/autopilot.log

# ============================================================================
# SECURITY
# ============================================================================

# Require TLS for API communication
REQUIRE_TLS=true

# Verify SSL certificates
VERIFY_SSL=true

# JWT token expiration (hours)
TOKEN_EXPIRATION_HOURS=24

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Polling interval (seconds)
POLL_INTERVAL=30

# Session duration (hours)
SESSION_DURATION_HOURS=24

# Rate limit for notifications (seconds)
NOTIFICATION_RATE_LIMIT=300

# Maximum concurrent recovery operations
MAX_CONCURRENT_RECOVERIES=3

# Resource thresholds (percentage)
CPU_CRITICAL_THRESHOLD=95
CPU_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=80
